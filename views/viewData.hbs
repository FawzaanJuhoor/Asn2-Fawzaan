<div class="container">
    <div class="content">
        <h1>All Airbnb Properties</h1>
        <p class="welcome-subtitle">Displaying {{properties.length}} properties</p>
        
        <div class="table-container">
            <table class="data-table">
                <thead>
                    <tr>
                        <th>Image</th>
                        <th>ID</th>
                        <th>Property Name</th>
                        <th>Country</th>
                        <th>Neighborhood</th>
                        <th>Price</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each properties}}
                    <tr class="{{getRowClass this.NAME}}">
                        <td class="image-cell">
                            {{#if this.thumbnail}}
                                <img src="{{this.thumbnail}}" alt="{{formatPropertyName this.NAME}}" class="table-image" loading="lazy">
                            {{else}}
                                <div class="no-image">No Image</div>
                            {{/if}}
                        </td>
                        <td class="property-id">{{this.id}}</td>
                        <td class="property-name {{#if (isEmptyName this.NAME)}}empty-name{{/if}}">
                            {{formatPropertyName this.NAME}}
                        </td>
                        <td class="country">{{this.country}}</td>
                        <td class="neighborhood">{{this.neighbourhood}}</td>
                        <td class="price">{{this.price}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>

        <div class="table-info">
            <p>Showing all {{properties.length}} properties. Empty names are highlighted and displayed as "N/A".</p>
        </div>

        <div class="action-buttons">
            <a href="/viewData/clean" class="back-link">ðŸ§¹ View Clean Data (No Empty Names)</a>
            <a href="/" class="back-link"> Home</a>
        </div>
    </div>
</div>